@using MauiMudBlazor.Helpers
@inherits LayoutComponentBase
@inject EventHandleHelper themeHelper

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Bottom="true">

        <MudIconButton OnClick="DrawerToggle" Icon="@Icons.Material.Rounded.Notes" Color="Color.Inherit" Edge="Edge.Start" />
        <MudSpacer/>

        <MudNavLink Match="NavLinkMatch.All" IconColor="Color.Inherit" Href="/backpacks/list"
                    Icon="@Icons.Material.Outlined.Backpack"></MudNavLink>
        <MudSpacer />

        <MudNavLink Match="NavLinkMatch.All" IconColor="Color.Inherit" Href="/subbags/list"
                    Icon="@Icons.Material.Outlined.Category"></MudNavLink>
        <MudSpacer />

        <MudNavLink Match="NavLinkMatch.All" IconColor="Color.Inherit" Href="/items/list"
                    Icon="@Icons.Material.Outlined.Inventory"></MudNavLink>
        <MudSpacer />

        <MudNavLink Match="NavLinkMatch.All" IconColor="Color.Inherit" Href="/configurations/list"
                    Icon="@Icons.Material.Outlined.Build"></MudNavLink>
        <MudSpacer />


        <MudToggleIconButton ToggledChanged="@ToggleDarkMode" Icon="@Icons.Material.Filled.LightMode"
                             ToggledIcon="@Icons.Material.Filled.DarkMode"></MudToggleIconButton>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Backpack App</MudText>
            
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer Class="pt-1">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>


